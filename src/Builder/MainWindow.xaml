<Window x:Class="Builder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Builder"
        xmlns:model="clr-namespace:Model;assembly=Model"
        mc:Ignorable="d"
        Title="Builder" Height="350" Width="525">
    <DockPanel>
        <Border BorderThickness="0"
                Padding="5"
                Height="Auto"
                DockPanel.Dock="Top">
            <DockPanel>
                <Button x:Name="Browse"
                        DockPanel.Dock="Right"
                        Content="Browse"
                        VerticalAlignment="Center"
                        Padding="10,2,10,2"
                        Click="OnClickBrowseSolution"/>
                <TextBox x:Name="SolutionFilePath"
                         TextWrapping="Wrap"
                         Margin="0,0,10,0"
                         Padding="2"
                         Text="{Binding Solution.Path, Mode=OneWay}" />
            </DockPanel>
        </Border>
        <Button DockPanel.Dock="Bottom"
                Content="Build solution"
                HorizontalAlignment="Center"
                Padding="10,3"
                Margin="0,5"
                Click="OnClickBuildSolution"/>
        <Button DockPanel.Dock="Bottom"
                Content="Save build timeline"
                HorizontalAlignment="Center"
                Padding="10,3"
                Margin="0,5"
                Click="OnClickSaveBuildTimeline"/>
        <ListView Name="BuildMessageList"
                  ItemsSource="{Binding BuildMessages}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Type}" Value="BuildStartedEventArgs">
                            <Setter Property="Foreground" Value="Green" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Type}" Value="BuildFinishedEventArgs">
                            <Setter Property="Foreground" Value="Green" />
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Type}" Value="ProjectStartedEventArgs">
                            <Setter Property="Foreground" Value="Blue" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Type}" Value="ProjectFinishedEventArgs">
                            <Setter Property="Foreground" Value="Blue" />
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Type}" Value="TaskStartedEventArgs">
                            <Setter Property="Foreground" Value="Gray" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Type}" Value="TaskFinishedEventArgs">
                            <Setter Property="Foreground" Value="Gray" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Node"
                                    Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Context.NodeId}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="ProjectContextId"
                                    Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Context.ProjectContextId}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="ProjectInstanceId"
                                    Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Context.ProjectInstanceId}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="TargetId"
                                    Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Context.TargetId}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="TaskId"
                                    Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Context.TaskId}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Type"
                                    Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Type}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Message"
                                    Width="350">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Message}"
                                           TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
